@page
@model RechercheInformation.WeightedBooleanSearchModel
@{
    ViewData["Title"] = "Weighted Boolean Search";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Upload Document</h3>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input asp-for="DocumentUpload" class="form-control-file" />
                </div>
                <button type="submit" asp-page-handler="Upload" class="btn btn-primary">Upload</button>
            </form>
        </div>
        <div class="col-md-6">
            <h3>Search Documents</h3>
            <form method="get">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Enter search query" value="@Model.Query" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Available Documents</h3>
            @if (Model.AvailableDocuments.Any())
            {
                <ul class="list-group">
                    @foreach (var doc in Model.AvailableDocuments)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @doc
                            <form method="post" class="d-inline">
                                <input type="hidden" name="fileName" value="@doc" />
                                <button type="submit" asp-page-handler="DeleteDocument" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No documents uploaded yet.</p>
            }
        </div>
        <div class="col-md-6">
            <h3>Search Results</h3>
            @if (Model.SearchResults.Any())
            {
                <ul class="list-group">
                    @foreach (var result in Model.SearchResults)
                    {
                        <li class="list-group-item">
                            <strong>Score: @result.Score.ToString("F4")</strong>
                            <p>@result.Document</p>
                        </li>
                    }
                </ul>
            }
            else if (!string.IsNullOrEmpty(Model.Query))
            {
                <p>No results found for your search.</p>
            }
        </div>
    </div>
</div>